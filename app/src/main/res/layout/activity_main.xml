<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="idv.tomazwang.app.drawpokemon.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_pokemon_pic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:minHeight="120dp"
            android:minWidth="120dp"
            android:padding="5dp"
            android:layout_marginStart="60dp"
            android:src="@drawable/pokeball" />

        <LinearLayout
            android:id="@+id/layout_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/iv_pokemon_pic"
            android:minWidth="240dp"
            android:layout_marginEnd="40dp"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner_pokemon_name"
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/txt_timer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="30"
                android:textSize="42sp" />


        </LinearLayout>




    </RelativeLayout>


    <Button
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_color_picker" />

    <idv.tomazwang.app.drawpokemon.view.DrawingView
        android:id="@+id/view_drawing_pannel"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_paint_color"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" />


</LinearLayout>
